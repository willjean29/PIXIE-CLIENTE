	<!--================Category Product Area =================-->
	<section class="cat_product_area section_gap section-padding">
		<div class="container-fluid">
			<div class="row flex-row-reverse">
				<div class="col-lg-9">
					{{!-- id de ek enpresa --}}
					<input type="hidden" name="id-empresa" id="id-empresa" value="{{empresa.id}}">
					<div class="product_top_bar">
						<div class="left_dorp">
							<h4>{{empresa.nombre}}</h4>
						</div>
						<div class="right_page ml-auto">
							<h2>{{empresa.puntos}} <i class="fa fa-circle"></i></h2>
						</div>
					</div>
					<div class="latest_product_inner row" id="listado-premios">
						{{#if premios}}
							{{#each premios}}
							<div class="col-lg-3 col-md-3 col-sm-6">
								<div class="f_p_item">
									<div class="f_p_img">
										<img class="img-fluid" src="{{url}}" alt="">
										<div class="p_icon">
											<a href="#">
												<i class="lnr lnr-heart"></i>
											</a>
											<a href="#" class="comprar" data-toggle="modal" data-target="#exampleModal" data-id="{{_id}}">
												<i class="lnr lnr-cart comprar"></i>
											</a>
										</div>
									</div>
									<a href="#">
										<h4>{{name}}</h4>
									</a>
									<h5>{{points}}</h5>
								</div>
							</div>
							{{/each}}
						{{/if}}
					</div>
				</div>
				<div class="col-lg-3">
					<div class="left_sidebar_area">
						<aside class="left_widgets cat_widgets">
							<div class="l_w_title">
								<h3>Categor√≠as</h3>
							</div>
							<div class="widgets_inner">
								<ul class="list">
                                {{#if categorias}}
                                    {{#each categorias}}
                                        <li>
                                            <a href="/business/{{empresa}}/{{name}}" class="{{name}} categoria">{{name}}</a>
                                        </li>
                                    {{/each}}
                                {{/if}}
								</ul>
							</div>
						</aside>
						<aside class="left_widgets p_filter_widgets">
							<div class="l_w_title">
								<h3>Filtro de Premios</h3>
							</div>
							<div class="widgets_inner">
								<h4>Puntos</h4>
								<ul class="list">
									{{#selectRangoPunto filtroPuntos}}
									<li id="500">
										<a href="?puntos=500">500</a>
									</li>
									<li id="1000">
										<a href="?puntos=1000">1000</a>
									</li>
									<li id="2000">
										<a href="?puntos=2000">2000</a>
									</li>
									<li id="5000">
										<a href="?puntos=5000">5000</a>
									</li>
									<li id="10000">
										<a href="?puntos=10000">10000</a>
									</li>
									<li>
										<a href="?">Todos</a>
									</li>
									{{/selectRangoPunto}}
								</ul>
							</div>
							{{!-- <div class="widgets_inner">
								<h4>Color</h4>
								<ul class="list">
									<li>
										<a href="#">Black</a>
									</li>
									<li>
										<a href="#">Black Leather</a>
									</li>
									<li class="active">
										<a href="#">Black with red</a>
									</li>
									<li>
										<a href="#">Gold</a>
									</li>
									<li>
										<a href="#">Spacegrey</a>
									</li>
								</ul>
							</div> --}}
							{{!-- <div class="widgets_inner">
								<h4>Puntos</h4>
								<div class="range_item">
									<div id="slider-range"></div>
									<div class="row m0">
										<label for="amount">Puntos : </label>
										<input type="text" id="amount" readonly>
									</div>
								</div>
							</div> --}}
						</aside>
					</div>
				</div>
			</div>

			<div class="row pt-5 justify-content-center">
				<div class="pagination pagination-centered">
					<nav class="cat_page mx-auto" aria-label="Page navigation example">
						<ul class="pagination">
							{{#paginate pagination type="first"}}
							<li {{#if disabled}}class="page-item disabled"{{/if}} class="page-item"><a class="page-link" {{#if parmPuntos}}href="?puntos={{parmPuntos}}&p={{n}}"{{else}}href="?p={{n}}"{{/if}}><i class="fa fa-angle-double-left" aria-hidden="true"></i></a></li>
							{{/paginate}}
							{{#paginate pagination type="previous"}}
							<li {{#if disabled}}class="page-item disabled"{{/if}} class="page-item"><a class="page-link" {{#if parmPuntos}}href="?puntos={{parmPuntos}}&p={{n}}"{{else}}href="?p={{n}}"{{/if}}><i class="fa fa-chevron-left" aria-hidden="true"></i></a></li>
							{{/paginate}}
							{{#paginate pagination type="middle" limit="7"}}
							<li {{#if active}}class="active"{{/if}} class="page-item"><a class="page-link" {{#if parmPuntos}}href="?puntos={{parmPuntos}}&p={{n}}"{{else}}href="?p={{n}}"{{/if}}>{{n}}</a></li>
							{{/paginate}}
							{{#paginate pagination type="next"}}
							<li {{#if disabled}}class="page-item disabled"{{/if}} class="page-item"><a class="page-link" {{#if parmPuntos}}href="?puntos={{parmPuntos}}&p={{n}}"{{else}}href="?p={{n}}"{{/if}}><i class="fa fa-chevron-right {{parmPuntos}}" aria-hidden="true"></i></a></li>
							{{/paginate}}
							{{#paginate pagination type="last"}}
							<li {{#if disabled}}class="page-item disabled"{{/if}} class="page-item"><a class="page-link" {{#if parmPuntos}}href="?puntos={{parmPuntos}}&p={{n}}"{{else}}href="?p={{n}}"{{/if}}><i class="fa fa-angle-double-right" aria-hidden="true"></i></a></li>
							{{/paginate}}
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!--================End Category Product Area =================-->

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Detalle Premio</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<div class="card">
		<img src="" class="card-img-top" alt="" id="imagen-premio"></canvas>
		<div class="card-body">
			
			<h5 class="card-title"><strong>Titulo : </strong> <span id="titulo-premio">Titulo Premio</span></h5>
			<p class="card-text"><strong>Descripcion : </strong><span class="card-text" id="descripcion-premio"></span></p>
			<p class="card-text"><strong>Puntos : </strong><span class="card-text" id="puntos-premio"></span></p>
		</div>
		</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
		<input type="hidden" name="id" id="id-premio">
        <button type="button" class="btn btn-primary canjear" id="btn-comprar">Canjear Premio</button>
      </div>
    </div>
  </div>
</div>