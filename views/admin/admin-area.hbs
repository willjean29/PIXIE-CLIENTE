  <script>

    var ctx = document.getElementById('cliente-genero').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Hombres', 'Mujeres'],
            datasets: [{
                label: '# de clientes',
                data: [12, 19],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)'
                ],
                borderWidth: 1
            }]
        }, 
    });

    var ctx = document.getElementById('cliente-puntos').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Inactivos', 'Activos'],
            datasets: [{
                label: '# de clientes',
                data: [50, 150],
                backgroundColor: [
                    'rgba(245, 105, 84, 0.2)',
                    'rgba(0, 166, 90, 0.2)'
                ],
                borderColor: [
                    'rgba(245, 105, 84, 1)',
                    'rgba(0, 166, 90, 1)'
                ],
                borderWidth: 1
            }]
        }, 
    });

    var ctx = document.getElementById('lista-puntos').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Cliente1','Cliente2','Cliente3','Cliente4','Cliente5'],
            datasets: [{
                label: '# de puntos',
                data: [12, 19, 3, 5, 2],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

  </script>
